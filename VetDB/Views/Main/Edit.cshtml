@model VetDB.Models.Table

@{
    ViewBag.Title = "Редактирование информации о пациенте";
}

<h2>Редактирование информации о пациенте</h2>

<!--Создаем форму-->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <p class="control-label col-md-2">Имя пациента</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } }) <!--Создаем хэлпером тестбокс для измененных данных-->
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Имя хозяина</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Owner, new { htmlAttributes = new { @class = "form-control" } }) <!--Создаем хэлпером тестбокс для измененных данных-->
                @Html.ValidationMessageFor(model => model.Owner, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            @Html.HiddenFor(model => model.RegisterDate, new { htmlAttributes = new { @class = "form-control" } }) <!--Создаем скрытый элемент для даты регистрации, т.к. хотим оставить ее нетронутой-->
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Наличие прививки</p>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Vaccinated) <!--Создаем хэлпером чекбокс для измененных данных-->
                    @Html.ValidationMessageFor(model => model.Vaccinated, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" /> <!--Отправляем данные в контроллер-->
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться к списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
