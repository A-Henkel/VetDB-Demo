@model VetDB.Models.Table

@{
    ViewBag.Title = "Добавить нового пациента";
}

<h2>Добавить нового пациента</h2>

<!--Создаем форму-->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p class="control-label col-md-2">Имя пациента</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } }) <!--Создаем хэлпером тестбокс для измененных данных-->
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" }) <!--Проверяем введенные данные-->
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Имя хозяина</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Owner, new { htmlAttributes = new { @class = "form-control" } }) <!--Создаем хэлпером тестбокс для измененных данных-->
                @Html.ValidationMessageFor(model => model.Owner, "", new { @class = "text-danger" })  <!--Проверяем введенные данные-->
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Дата регистрации</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.RegisterDate, new { htmlAttributes = new { @class = "form-control", Value = DateTime.Now } }) <!--Создаем хэлпером тестбокс для измененных данных, присваиваем текущее дату\время как данные по умолчанию-->
                @Html.ValidationMessageFor(model => model.RegisterDate, "", new { @class = "text-danger" })  <!--Проверяем введенные данные-->
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Наличие прививки</p>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Vaccinated) <!--Создаем хэлпер-чекбокс для измененных данных-->
                    @Html.ValidationMessageFor(model => model.Vaccinated, "", new { @class = "text-danger" })  <!--Проверяем введенные данные-->
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" /> <!--Отправляем данные в контроллер-->
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться к списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
